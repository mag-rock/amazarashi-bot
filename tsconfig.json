{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": [
			"ES2022"
		],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"sourceMap": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,
		"allowJs": true,
		"checkJs": false,
		"baseUrl": "./",
		"paths": {
			"@/*": [ "src/*" ]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"tests"
	]
}