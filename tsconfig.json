{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": [
			"ES2022"
		],
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"sourceMap": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}